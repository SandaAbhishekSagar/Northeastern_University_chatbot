commands:
  01_install_ollama:
    command: |
      curl -fsSL https://ollama.ai/install.sh | sh
      ollama pull llama2:7b
  02_setup_chroma:
    command: |
      mkdir -p /var/app/current/chroma_data
      chmod 755 /var/app/current/chroma_data
  03_setup_environment:
    command: |
      echo "export PRODUCTION=true" >> /home/ec2-user/.bashrc
      echo "export ENVIRONMENT=production" >> /home/ec2-user/.bashrc
      echo "export PYTHON_VERSION=3.9" >> /home/ec2-user/.bashrc 